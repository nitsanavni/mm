{
	"name": "mm",
	"version": "0.0.0-semanticlaly-released",
	"description": "mindmap for the command line",
	"files": [
		"dist/src/"
	],
	"bin": "dist/src/cli.js",
	"main": "dist/src/index.js",
	"types": "dist/src/index.d.ts",
	"scripts": {
		"hack": "ya run hack",
		"build": "tsc",
		"build:watch": "tsc -w --preserveWatchOutput",
		"test": "ava",
		"test:watch": "ava -w",
		"style:check": "prettier --check . || (c=$?; echo \"\ntry running 'npm run style' to fix the issues\"; (exit $c))",
		"style": "prettier --write .",
		"lint": "tslint --fix -p .",
		"lint:check": "tslint -p .",
		"eslint": "eslint --ext ts --ext tsx .",
		"preinstall": "git config --local include.path ../.gitconfig"
	},
	"ya": {
		"recipes": {
			"hack": [
				"build:watch",
				"test:watch"
			]
		},
		"ingredients": {
			"build:watch": {
				"color": "green",
				"pwd": ".",
				"cmd": "npm run build:watch"
			},
			"test:watch": {
				"color": "magenta",
				"pwd": ".",
				"cmd": "npm run test:watch"
			}
		}
	},
	"ava": {
		"files": [
			"dist/test/**/*"
		],
		"ignoredByWatcher": [
			"**/*.ts*"
		],
		"require": [
			"@babel/register"
		]
	},
	"dependencies": {
		"@types/react": "^16.9.34",
		"import-jsx": "^4.0.0",
		"ink": "^2.7.1",
		"max-listeners-exceeded-warning": "0.0.1",
		"meow": "^6.1.0",
		"prop-types": "^15.7.2",
		"react": "^16.13.1"
	},
	"devDependencies": {
		"@babel/preset-react": "^7.9.4",
		"@babel/register": "^7.9.0",
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-angular": "^8.3.4",
		"@papayaglobal/ya": "^1.0.5",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"ava": "^3.7.0",
		"chalk": "^4.0.0",
		"commitizen": "^4.0.4",
		"cz-conventional-changelog": "^3.1.0",
		"eslint": "^6.8.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"husky": "^4.2.3",
		"ink-testing-library": "^1.0.3",
		"lint-staged": "^10.1.2",
		"prettier": "2.0.4",
		"pretty-quick": "2.0.1",
		"semantic-release": "^17.0.4",
		"tslint": "^6.1.1",
		"typescript": "^3.8.3",
		"xo": "^0.29.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run lint:check && npm run build && npm test",
			"commit-msg": "commitlint --verbose -e"
		}
	},
	"lint-staged": {
		"*.ts*": [
			"eslint --fix --ext ts",
			"tslint --fix"
		],
		"*.{ts*,json}": "prettier --write"
	},
	"babel": {
		"presets": [
			"@babel/preset-react"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
