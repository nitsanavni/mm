{
	"name": "mind-map-cli",
	"version": "0.0.0-semanticlaly-released",
	"description": "mind map for the command line",
	"license": "MIT",
	"keywords": [
		"cli",
		"mind-map",
		"mindmap",
		"outline",
		"tree"
	],
	"repository": "https://github.com/nitsanavni/mm",
	"files": [
		"dist/src/*.js"
	],
	"bin": {
		"mm": "dist/src/cli.js"
	},
	"scripts": {
		"hack": "FORCE_COLOR=1 parallel --line-buffer ::: 'npm run build:watch' 'npm run test:watch'",
		"build": "tsc",
		"build:watch": "tsc -w --preserveWatchOutput",
		"test": "nyc ava dist/test/*.spec.js",
		"test:watch": "ava -w dist/test/*.spec.js",
		"style:check": "prettier --check . || (c=$?; echo \"\ntry running 'npm run style' to fix the issues\"; (exit $c))",
		"style": "prettier --write .",
		"tslint": "tslint --fix -p .",
		"tslint:check": "tslint -p .",
		"eslint": "eslint --ext ts --ext tsx --fix .",
		"eslint:check": "eslint --ext ts --ext tsx .",
		"plop:build": "tsc -p plop",
		"preplop": "[ -f plop/plopfile.js ] || npm run plop:build",
		"plop": "plop --plopfile plop/plopfile.js --dest ."
	},
	"nyc": {
		"exclude": []
	},
	"ava": {
		"files": [
			"dist/test/**/*"
		],
		"ignoredByWatcher": [
			"**/*.ts*"
		],
		"require": [
			"@babel/register"
		]
	},
	"dependencies": {
		"arrify": "^2.0.1",
		"chalk": "^4.0.0",
		"ink": "^2.7.1",
		"ink-text-input": "^3.2.2",
		"lodash": "^4.17.15",
		"meow": "^6.1.0",
		"react": "^16.13.1"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-react": "^7.9.4",
		"@babel/register": "^7.9.0",
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-angular": "^8.3.4",
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@sinonjs/fake-timers": "^6.0.1",
		"@types/lodash": "^4.14.149",
		"@types/meow": "^5.0.0",
		"@types/react": "^16.9.34",
		"@types/sinonjs__fake-timers": "^6.0.1",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"ava": "^3.7.0",
		"commitizen": "^4.0.4",
		"cz-conventional-changelog": "^3.1.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"execa": "^4.0.0",
		"husky": "^4.2.3",
		"ink-testing-library": "^1.0.3",
		"lint-staged": "^10.1.2",
		"nyc": "^15.0.1",
		"plop": "^2.6.0",
		"prettier": "2.0.4",
		"semantic-release": "^17.0.4",
		"source-map-support": "^0.5.19",
		"strip-ansi": "^6.0.0",
		"ts-node": "^8.9.0",
		"tslint": "^6.1.1",
		"typescript": "^3.8.3"
	},
	"husky": {
		"hooks": {}
	},
	"lint-staged": {
		"*.ts*": [
			"eslint --fix --ext ts --ext tsx",
			"tslint --fix"
		],
		"*.{ts*,json}": "prettier --write"
	},
	"babel": {
		"presets": [
			"@babel/preset-react"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
